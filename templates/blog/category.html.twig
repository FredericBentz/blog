{# templates/blog/category.html.twig #}
{%  extends 'base.html.twig' %}

{% block title %}{{ category }} Articles{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <h1>All {{ category }} articles</h1>
            {% for article in articles %}
                <div>
                    <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
                    <p>{{ article.content }}</p>
                </div>
            {% else %}
                Aucun article trouv√©.
            {% endfor %}
            <a href="{{ path('app_index')}}">Back to homepage.</a>
        </div>
    </section>
{% endblock %}